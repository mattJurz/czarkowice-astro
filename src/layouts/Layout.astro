---
import '../styles/global.css'

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Agroturystyka Czarkowice - wypoczynek na łonie natury w malowniczej okolicy. Pokoje gościnne, sala konferencyjna, atrakcje dla całej rodziny." } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="bg-stone-50 text-stone-800 font-sans antialiased">
    <slot />
  </body>
</html>

