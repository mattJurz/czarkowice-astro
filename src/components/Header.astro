---
const navLinks = [
  { href: "#pokoje", label: "Pokoje" },
  { href: "#oferta", label: "Oferta" },
  { href: "#imprezy", label: "Imprezy" },

  { href: "#galeria", label: "Galeria" },
  { href: "#stadnina", label: "Stadnina" },
  { href: "#kontakt", label: "Kontakt" },
];
---

<header id="header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-500">
  <div class="container mx-auto px-6 py-4">
    <nav class="flex items-center justify-between">
      <!-- Left Nav -->
      <ul class="hidden md:flex items-center gap-8">
        {navLinks.slice(0, 3).map((link) => (
          <li>
            <a 
              href={link.href} 
              class="nav-link text-sm font-medium tracking-wide uppercase text-white/90 hover:text-white transition-colors duration-300"
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>

      <!-- Logo -->
      <a href="/" class="flex items-center justify-center">
        <img 
          src="/images/logo.png" 
          alt="Czarkowice" 
          class="h-16 md:h-20 w-auto drop-shadow-lg transition-all duration-300"
        />
      </a>

      <!-- Right Nav -->
      <ul class="hidden md:flex items-center gap-8">
        {navLinks.slice(3).map((link) => (
          <li>
            <a 
              href={link.href} 
              class="nav-link text-sm font-medium tracking-wide uppercase text-white/90 hover:text-white transition-colors duration-300"
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn" 
        class="md:hidden text-white p-2"
        aria-label="Menu"
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </nav>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-forest-900/95 backdrop-blur-sm">
    <ul class="container mx-auto px-6 py-4 space-y-4">
      {navLinks.map((link) => (
        <li>
          <a 
            href={link.href} 
            class="block text-sm font-medium tracking-wide uppercase text-white/90 hover:text-white py-2"
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</header>

<script>
  // Header scroll effect
  const header = document.getElementById('header');
  const navLinks = document.querySelectorAll('.nav-link');
  
  function updateHeader() {
    if (window.scrollY > 100) {
      header?.classList.add('bg-forest-900/95', 'backdrop-blur-sm', 'shadow-lg');
      header?.classList.remove('py-2');
    } else {
      header?.classList.remove('bg-forest-900/95', 'backdrop-blur-sm', 'shadow-lg');
    }
  }
  
  window.addEventListener('scroll', updateHeader);
  updateHeader();

  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu on link click
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>

