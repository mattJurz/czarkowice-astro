---
// Rooms Section Component with Gallery Modal

interface RoomGallery {
  name: string;
  slug: string;
  price: string;
  priceLabel: string;
  hasOffer?: boolean;
  mainImage: string;
  galleryImages: string[];
}

const rooms: RoomGallery[] = [
  {
    name: "Rodzinne",
    slug: "rodzinne",
    price: "50 zł",
    priceLabel: "/ osoba",
    hasOffer: false,
    mainImage: "/images/place/osrodek-17.jpg",
    galleryImages: [
      "/images/place/osrodek-17.jpg",
      "/images/rooms/rodzinne-3.jpg"
    ]
  },
  {
    name: "3 osobowe",
    slug: "3-osobowe",
    price: "50 zł",
    priceLabel: "/ osoba",
    hasOffer: false,
    mainImage: "/images/rooms/3-osobowe-2.jpg",
    galleryImages: [
      "/images/rooms/3-osobowe-2.jpg",
      "/images/rooms/3-osobowe-1.jpg",
      "/images/rooms/3-osobowe-3.jpg",
      "/images/rooms/3-osobowe-4.jpg",
      "/images/rooms/3-osobowe-5.jpg"
    ]
  },
  {
    name: "4 osobowe",
    slug: "4-osobowe",
    price: "40 zł",
    priceLabel: "/ osoba",
    hasOffer: false,
    mainImage: "/images/rooms/4-osobowe-2.jpg",
    galleryImages: [
      "/images/rooms/4-osobowe-2.jpg",
      "/images/rooms/4-osobowe-1.jpg",
      "/images/rooms/4-osobowe-3.jpg",
      "/images/rooms/4-osobowe-4.jpg"
    ]
  },
  {
    name: "6 osobowe",
    slug: "6-osobowe",
    price: "40 zł",
    priceLabel: "/ osoba",
    hasOffer: false,
    mainImage: "/images/rooms/6-osobowe-1.jpg",
    galleryImages: [
      "/images/rooms/6-osobowe-1.jpg",
      "/images/rooms/6-osobowe-2.jpg",
      "/images/rooms/6-osobowe-3.jpg",
      "/images/rooms/6-osobowe-4.jpg",
      "/images/rooms/6-osobowe-1-3.jpg"
    ]
  }
