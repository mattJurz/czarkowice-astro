---
// Oferta Section Component

interface Service {
  name: string;
  description: string;
  icon: string;
  image: string;
}

interface Props {
  services: Service[];
}

const { services } = Astro.props;
---

<section id="oferta" class="py-20 md:py-28 bg-forest-950 text-white">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <p class="text-forest-400 text-sm tracking-[0.2em] uppercase mb-3">Co Oferujemy</p>
      <h2 class="font-serif text-4xl md:text-5xl text-white mb-4">Nasza Oferta</h2>
      <p class="text-white/70 max-w-2xl mx-auto">
        Czarkowice-Młyn to kompleksowy ośrodek agroturystyczny z pełnym zapleczem dla rodzin, grup i firm.
      </p>
    </div>

    <!-- First row: 3 cards -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
      {services.slice(0, 3).map((service) => (
        <div class="group bg-forest-900/50 rounded-sm overflow-hidden card-hover">
          <div class="aspect-video overflow-hidden">
            <img 
              src={service.image} 
              alt={service.name} 
              class="w-full h-full object-cover img-zoom"
            />
          </div>
          <div class="p-6">
            <div class="flex items-center gap-3 mb-3">
              <span class="text-2xl">{service.icon}</span>
              <h3 class="font-serif text-xl">{service.name}</h3>
            </div>
            <p class="text-white/70 text-sm leading-relaxed">{service.description}</p>
          </div>
        </div>
      ))}
    </div>

    <!-- Second row: 4 cards -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      {services.slice(3).map((service) => (
        <div class="group bg-forest-900/50 rounded-sm overflow-hidden card-hover">
          <div class="aspect-video overflow-hidden">
            <img 
              src={service.image} 
              alt={service.name} 
              class="w-full h-full object-cover img-zoom"
            />
          </div>
          <div class="p-5">
            <div class="flex items-center gap-3 mb-2">
              <span class="text-xl">{service.icon}</span>
              <h3 class="font-serif text-lg">{service.name}</h3>
            </div>
            <p class="text-white/70 text-sm leading-relaxed">{service.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

